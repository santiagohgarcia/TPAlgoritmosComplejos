<TP-ACyEDA>
	<app title="MMPEG">
	  

         <config title="Rotar Video"
				command="C:\Program Files\ffmpeg"
				params='ffmpeg -i "[VIDEO]" -vf "rotate=[GRADO]" "[VIDEO_OUT]'>
		     
		    <controlFileChooser name="VIDEO" 
		        	            label="Video input">
	        	    <def-dir>C:\Users\</def-dir>
                    <tipo-arch>mp4,avi,mpeg</tipo-arch>
		    </controlFileChooser>
	        
	        <controlComboBox name="GRADO" 
	        	             label="Grado">
		            <option>90</option>
		            <option>180</option>
		            <option>360</option>
	        </controlComboBox>

   			<controlFileChooser name="VIDEO_OUT" 
		        	            label="Video output">
	        	    <def-dir>C:\Users\</def-dir>
                    <tipo-arch>mp4,avi,mpeg</tipo-arch>
		     </controlFileChooser>

        </config>



        <config title="Video Extract"
				command="C:\Program Files\ffmpeg"
				params='ffmpeg -ss [TIME_LOW] -i "[VIDEO]" -t [TIME_DURATION] -c copy "[VIDEO_OUT]"'>

				<controlFileChooser name="VIDEO" 
		        	                label="Archivo de video">
	        	    <def-dir>C:\Users\Santiago\git\TPAlgoritmosComplejos</def-dir>
                    <tipo-arch>mp4,avi,mpeg</tipo-arch>
		        </controlFileChooser>

                <controlTimePlusTime name="TIMEPLUSTIME" 
       	                       label="Tiempo Mas Tiempo(Intervalo)">
						       <timeLow name="TIME_LOW" 
					        	        label="Tiempo Low">
						          <regex>[0-9]{2}:[0-9]{2}:[0-9]{2}</regex>
					           </timeLow>
					           <timeToSum name="TIME_DURATION" 
					       	              label="Tiempo a Sumar">
							          <regex>[0-9]{2}:[0-9]{2}:[0-9]{2}</regex>
						         </timeToSum>                 
                </controlTimePlusTime>  

                <controlFileChooser name="VIDEO_OUT" 
		        	                label="Archivo de video">
	        	    <def-dir>C:\Users\Santiago\git\TPAlgoritmosComplejos</def-dir>
                    <tipo-arch>mp4,avi,mpeg</tipo-arch>
		        </controlFileChooser>
		</config>


        
        <config title="Audio To Video"
				command="C:\Program Files\ffmpeg"
				params='ffmpeg -loop 1 -i "[IMAGE]" -i "[AUDIO]" -shortest -c:v libx264 -c:a copy "[VIDEO_OUT]"'>

                <controlFileChooser name="AUDIO" 
		        	                label="Archivo de audio">
	        	    <def-dir>C:\Users\</def-dir>
                    <tipo-arch>mp3,wav</tipo-arch>
		        </controlFileChooser>			

                <controlFileChooser name="IMAGE" 
		        	                label="Archivo de imagen">
	        	    <def-dir>C:\Users\</def-dir>
                    <tipo-arch>jpg,gif</tipo-arch>
		        </controlFileChooser>		

                <controlFileChooser name="VIDEO_OUT" 
		        	                label="Archivo de video">
	        	    <def-dir>C:\Users\</def-dir>
                    <tipo-arch>mp4,avi,mpeg</tipo-arch>
		        </controlFileChooser>	

	    </config>


        <config title="Join Audios"
				command="C:\Program Files\ffmpeg"
				params='ffmpeg -i concat:"[AUDIO1]|[AUDIO2]" -c copy -map 0:0 -map 0:1 -map 0:2 "[AUDIO_OUT]"'>

                <controlFileChooser name="AUDIO1" 
		        	                label="Archivo de audio 1">
	        	    <def-dir>C:\Users\</def-dir>
                    <tipo-arch>mp3,wav</tipo-arch>
		        </controlFileChooser>			

                 <controlFileChooser name="AUDIO2" 
		        	                label="Archivo de audio 2">
	        	    <def-dir>C:\Users\</def-dir>
                    <tipo-arch>mp3,wav</tipo-arch>
		        </controlFileChooser>		

                <controlFileChooser name="AUDIO_OUT" 
		        	                label="Archivo de audio output">
	        	    <def-dir>C:\Users\</def-dir>
                    <tipo-arch>mp3,wav</tipo-arch>
		        </controlFileChooser>		

	    </config>



</app>
</TP-ACyEDA>
